<h3>Host</h3>
<%= @event.host_name %>
<br>
<br>
<h3>Event Name</h3>
<%= @event.name %>
<br>
<br>
<h3>Description</h3>
<%= @event.description %>
<br>
<br>
<h3>Agenda</h3>
<%= @event.agenda %>
<br>
<br>
<h3>Event Time</h3>
<%= @event.event_time %>
<br>
<br>
<% if current_user.id == @event.user_id %>
  <%= button_to 'Edit Event', edit_event_path(@event), class: 'btn btn-danger', method: :get %>
  <%= button_to 'Delete Event', event_path(@event), class: 'btn btn-danger', method: :delete %>
  <br>
  <br>

  <h3> Current Registrants </h3>
  <br>
  <br>
  <% @event.event_registrations.each do |event_registration| %>
  <h2>Name</h2>
   <%= event_registration.attendee.first_name %> <%= event_registration.attendee.last_name %> 
   <br>
   <br>
   <h2>Email</h2>
   <%= event_registration.attendee.email %>
   <br>
   <h2>Phone Number</h2>
    <%= event_registration.attendee.phone_number %>
   <% end %>

<% else %>

  <% unless current_user.events_registered.include?(@event) %>
  
<%= button_to 'Submit Registration', submit_registration_path(@event), class: 'btn btn-danger', method: :post %>
  <% end %>
<% end %>